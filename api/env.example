# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
DATABASE_URL=./data/webhoxy.db

# CORS Configuration (comma-separated origins, or * for all)
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Log Retention (keeps the application lightweight)
# Number of days to keep webhook logs before automatic deletion
LOG_RETENTION_DAYS=7
# How often to run the cleanup job (in hours)
LOG_CLEANUP_INTERVAL_HOURS=24

# Application
APP_NAME=Webhoxy
APP_VERSION=0.1.0

